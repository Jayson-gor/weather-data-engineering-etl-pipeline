# Weather Data Project Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================
WEATHER_API_KEY=your_weatherstack_api_key_here

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
POSTGRES_DB=weather_data
POSTGRES_USER=weather_user
POSTGRES_PASSWORD=strong_secure_password_here

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_SECRET_KEY=generate_strong_32_character_secret_key_here
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=secure_admin_password_here

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
PGADMIN_DEFAULT_EMAIL=admin@yourcompany.com
PGADMIN_DEFAULT_PASSWORD=secure_pgadmin_password_here

# =============================================================================
# SUPERSET CONFIGURATION  
# =============================================================================
SUPERSET_SECRET_KEY=generate_another_strong_secret_key_here
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=secure_superset_password_here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Set to 'production' for production environment
ENVIRONMENT=development

# Database connection strings (auto-generated from above)
AIRFLOW_DATABASE_URL=postgresql+psycopg2://airflow:airflow@db:5432/airflow_db
